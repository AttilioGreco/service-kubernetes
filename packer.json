{
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "https://api.entercloudsuite.com/v2.0",
      "tenant_name": "{{user `tenant`}}",
      "username": "{{user `username`}}",
      "password": "{{user `password`}}",
      "region": "{{user `region`}}",
      "image_name": "{{user `image_name`}}",
      "instance_name": "{{user `instance_name`}}",
      "source_image": "{{user `source_image`}}",
      "ssh_username": "ubuntu",
      "flavor": "{{user `flavor`}}",
      "networks": [ "{{user `network`}}" ],
      "floating_ip_pool": "PublicNetwork",
      "security_groups": [ "ssh" ]
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/service-kubernetes",
      "source": "{{ pwd }}",
      "type": "file"
    },
    {
      "type": "shell",
      "inline_shebang": "/bin/bash -e",
      "script": "cicd/image.sh",
      "environment_vars": [
         "KUBESPRAY_VERSION={{user `kubespray_version`}}"
      ]
    }
  ],
  "variables": {
    "source_image": "e4e9d533-fcca-4985-a67b-2c569d658e98",
    "image_name": "{{env `IMAGE_NAME`}}",
    "instance_name": "kubernetes",
    "flavor":  "{{ env `FLAVOR` }}",
    "region":  "{{env `OS_REGION_NAME`}}",
    "tenant":  "{{env `OS_TENANT`}}",
    "username":  "{{env `OS_USERNAME`}}",
    "password":  "{{env `OS_PASSWORD`}}",
    "network":  "{{env `OS_NETWORK`}}",
    "kubespray_version": "{{env `KUBESPRAY_VERSION`}}"
  }
}
